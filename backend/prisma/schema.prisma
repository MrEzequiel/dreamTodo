generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @unique @default(uuid())
  name       String?
  email      String
  password   String
  imageURL   String?
  created_at DateTime @default(now())

  @@map("users")
  TokenUser TokenUser[]
}

model TokenUser {
  id         String   @unique @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  userToken  String
  tokenGoogle String?
  created_at DateTime @default(now())

  @@map("token_user")
}

model Todo {
  id          String      @unique @default(uuid())
  name        String
  description String?
  colletion   String
  complete    Boolean     @default(false)
  colletionId Colletion[] @relation("todo-colletion")

  @@map("todo")
}

model Colletion {
  id     String  @unique @default(uuid())
  name   String
  todoId String?
  todo   Todo?   @relation("todo-colletion", fields: [todoId], references: [id])

  @@map("colletions")
}
