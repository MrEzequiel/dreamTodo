generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String?
  email      String
  password   String
  imageURL   String?
  created_at DateTime @default(now())

  @@map("users")
  Colletion Colletion[]
}

model Todo {
  id           String    @id @unique @default(uuid())
  name         String
  description  String?
  complete     Boolean   @default(false)
  id_colletion String
  colletion    Colletion @relation(name: "DAUMTEMPO", fields: [id_colletion], references: [id], onDelete: Cascade)
  created_at  DateTime @default(now())


  Colletion Colletion[]
  @@map("todo")
}

model Colletion {

  id      String  @id @unique @default(uuid())
  name    String
  id_todo String?
  todo    Todo?   @relation(fields: [id_todo], references: [id], onDelete: Cascade)
  user    User    @relation(references: [id], fields: [userId], onDelete: Cascade)
  Todo Todo[] @relation("DAUMTEMPO")
  created_at  DateTime @default(now())

  

  @@map("colletions")
  userId String
}
