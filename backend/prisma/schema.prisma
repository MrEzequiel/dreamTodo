generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  name         String?
  email        String
  password     String
  imageURL     String?
  created_at   DateTime    @default(now())
  imageProfile String?
  Colletion    Colletion[]

  @@map("users")
}

model Todo {
  id           String      @id @unique @default(uuid())
  description  String?
  complete     Boolean     @default(false)
  id_colletion String
  created_at   DateTime    @default(now())
  title        String
  colletion    Colletion   @relation("DAUMTEMPO", fields: [id_colletion], references: [id], onDelete: Cascade)
  Colletion    Colletion[]

  @@map("todo")
}

model Colletion {
  id         String   @id @unique @default(uuid())
  name       String
  id_todo    String?
  userId     String
  created_at DateTime @default(now())
  emoji      String
  todo       Todo?    @relation(fields: [id_todo], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Todo       Todo[]   @relation("DAUMTEMPO")

  @@map("colletions")
}
